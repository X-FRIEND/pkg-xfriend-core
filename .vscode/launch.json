  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["-t", "10000", "test/**/*.js", "--colors"],
      "runtimeExecutable": "node",
      "env": { "TEST": "true" },
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
